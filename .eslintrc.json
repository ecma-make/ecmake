{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-underscore-dangle": 0
    },
    "overrides": [
        {
            "files": ["*.test.js", "*.spec.js"],
            "rules": {
                "no-unused-expressions": 0,
                "prefer-arrow-callback": 0,
                "func-names": 0
            }
        },
        {
            "files": ["templates/ecmakeCode*.js"],
            "rules": {
                "import/no-extraneous-dependencies": 0,
                "import/no-unresolved": 0,
                "no-multi-assign": 0,
                "no-console": 0
            }
        }
    ]
}
